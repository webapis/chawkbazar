// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

model Products {
  id          Int     @id @default(autoincrement())
  title       String?  @db.VarChar(300)
  index       Int
  priceNew    String?
  price       Decimal?
  imageUrl    String?  @db.VarChar(300)
  link        String?
  timestamp   String?
  marka       String?
  gender      String?
  renk        String?
  altKategori String?
  kategori    String?

  @@fulltext([title])
}

model Users {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  first_name String?
  last_name  String?
}
